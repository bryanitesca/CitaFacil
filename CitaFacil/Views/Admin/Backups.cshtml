@model CitaFacil.ViewModels.Admin.DatabaseBackupPageViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Respaldos de base de datos";
    string FormatearUtc(DateTime? utc) =>
        utc.HasValue ? utc.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm") : "Sin registros";
}

<div class="space-y-8">
    <div class="flex flex-wrap items-center justify-between gap-4">
        <div class="space-y-1">
            <h1 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white">Respaldos de base de datos</h1>
            <p class="text-sm text-slate-500 dark:text-slate-400">Gestiona los respaldos manuales y restauraciones del sistema.</p>
        </div>
        <a asp-action="Index" class="inline-flex items-center gap-2 rounded-lg border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-600 transition hover:border-primary hover:text-primary dark:border-slate-700 dark:text-slate-300">
            <span class="material-symbols-outlined text-base">arrow_back</span>
            Volver
        </a>
    </div>

    @if (TempData["SuccessMessage"] is string successMessage)
    {
        <div class="rounded-xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700 dark:border-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-200">
            <span class="font-semibold">Éxito:</span> @successMessage
        </div>
    }

    @if (TempData["ErrorMessage"] is string errorMessage)
    {
        <div class="rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700 dark:border-red-800 dark:bg-red-900/30 dark:text-red-200">
            <span class="font-semibold">Error:</span> @errorMessage
        </div>
    }

    <div class="grid gap-6 md:grid-cols-2">
        <section class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm dark:border-slate-700 dark:bg-slate-900/60">
            <div class="space-y-4">
                <div class="flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-full bg-blue-50 text-primary dark:bg-blue-900/20">
                        <span class="material-symbols-outlined">cloud_download</span>
                    </div>
                    <div>
                        <h2 class="text-lg font-semibold text-slate-900 dark:text-white">Generar Respaldo</h2>
                        <p class="text-sm text-slate-500 dark:text-slate-400">Descarga una copia completa de la base de datos.</p>
                    </div>
                </div>

                <form asp-action="EjecutarRespaldoManual" method="post" class="pt-2">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="inline-flex w-full items-center justify-center gap-2 rounded-xl bg-primary px-5 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-primary/40">
                        <span class="material-symbols-outlined text-base">download</span>
                        Descargar Respaldo (.bak)
                    </button>
                </form>
            </div>
        </section>

        <section class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm dark:border-slate-700 dark:bg-slate-900/60">
            <div class="space-y-4">
                <div class="flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-full bg-amber-50 text-amber-600 dark:bg-amber-900/20">
                        <span class="material-symbols-outlined">restore</span>
                    </div>
                    <div>
                        <h2 class="text-lg font-semibold text-slate-900 dark:text-white">Restaurar Sistema</h2>
                        <p class="text-sm text-slate-500 dark:text-slate-400">Sube un archivo .bak para recuperar datos.</p>
                    </div>
                </div>

                <form asp-action="RestaurarBackup" method="post" enctype="multipart/form-data" class="space-y-4 pt-2">
                    @Html.AntiForgeryToken()
                    <div>
                        <input type="file" name="archivoRespaldo" accept=".bak" required
                               class="block w-full cursor-pointer rounded-xl border border-slate-200 bg-slate-50 px-3 py-2 text-sm text-slate-600 file:mr-4 file:border-0 file:bg-slate-200 file:px-4 file:py-2 file:text-sm file:font-semibold file:text-slate-700 hover:file:bg-slate-300 focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/30 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-200 dark:file:bg-slate-800 dark:file:text-slate-200" />
                    </div>

                    <button type="submit" class="inline-flex w-full items-center justify-center gap-2 rounded-xl bg-amber-600 px-5 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-amber-400">
                        <span class="material-symbols-outlined text-base">history</span>
                        Restaurar Base de Datos
                    </button>
                </form>
            </div>
        </section>
    </div>

    <section class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm dark:border-slate-700 dark:bg-slate-900/60">
        <h2 class="mb-4 text-xl font-semibold text-slate-900 dark:text-white">Historial de Operaciones</h2>

        <div class="overflow-x-auto rounded-t-lg border border-slate-200 dark:border-slate-700">
            <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-700 text-sm">
                <thead class="bg-slate-50 dark:bg-slate-900/50 text-left text-xs font-semibold uppercase text-slate-500">
                    <tr>
                        <th class="px-4 py-3">Fecha</th>
                        <th class="px-4 py-3">Acción</th>
                        <th class="px-4 py-3">Estado</th>
                        <th class="px-4 py-3">Detalles</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-200 dark:divide-slate-800">
                    @if (Model.History.Count == 0)
                    {
                        <tr><td colspan="4" class="px-4 py-6 text-center text-slate-500">No hay actividad reciente.</td></tr>
                    }
                    else
                    {
                        foreach (var item in Model.History)
                        {
                            <tr class="text-slate-700 dark:text-slate-200 hover:bg-slate-50 dark:hover:bg-slate-800/50">
                                <td class="px-4 py-3 whitespace-nowrap">@FormatearUtc(item.created_utc)</td>
                                <td class="px-4 py-3"><span class="rounded-md bg-slate-100 px-2 py-1 text-xs font-bold dark:bg-slate-800">@item.operation_type</span></td>
                                <td class="px-4 py-3">
                                    @if (item.status == "SUCCESS")
                                    {
                                        <span class="text-emerald-600 font-bold">Exitoso</span>
                                    }
                                    else
                                    {

                                        <span class="text-red-600 font-bold">Fallido</span>
                                    }
                                </td>
                                <td class="px-4 py-3 text-xs text-slate-500 max-w-xs truncate">@item.message</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        @if (Model.TotalPages > 1)
        {
            <div class="flex items-center justify-between rounded-b-lg border border-t-0 border-slate-200 bg-slate-50 px-4 py-3 dark:border-slate-700 dark:bg-slate-900/30">
                <div class="flex flex-1 justify-between sm:hidden">
                    <a href="@Url.Action("Backups", new { page = Model.CurrentPage - 1 })" class="@(Model.HasPreviousPage ? "" : "pointer-events-none opacity-50") relative inline-flex items-center rounded-md border border-slate-300 bg-white px-4 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50">Anterior</a>
                    <a href="@Url.Action("Backups", new { page = Model.CurrentPage + 1 })" class="@(Model.HasNextPage ? "" : "pointer-events-none opacity-50") relative ml-3 inline-flex items-center rounded-md border border-slate-300 bg-white px-4 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50">Siguiente</a>
                </div>
                <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
                    <div>
                        <p class="text-sm text-slate-700 dark:text-slate-400">
                            Página <span class="font-medium">@Model.CurrentPage</span> de <span class="font-medium">@Model.TotalPages</span>
                        </p>
                    </div>
                    <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
                        <a href="@Url.Action("Backups", new { page = Model.CurrentPage - 1 })" class="@(Model.HasPreviousPage ? "" : "pointer-events-none text-slate-300 dark:text-slate-600") relative inline-flex items-center rounded-l-md px-2 py-2 text-slate-400 ring-1 ring-inset ring-slate-300 hover:bg-slate-50 focus:z-20 focus:outline-offset-0 dark:ring-slate-600 dark:hover:bg-slate-800">
                            <span class="sr-only">Anterior</span>
                            <span class="material-symbols-outlined text-sm">chevron_left</span>
                        </a>

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            if (i == Model.CurrentPage)
                            {
                                <span class="relative z-10 inline-flex items-center bg-primary px-4 py-2 text-sm font-semibold text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary">@i</span>
                            }
                            else
                            {
                                <a href="@Url.Action("Backups", new { page = i })" class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-slate-900 ring-1 ring-inset ring-slate-300 hover:bg-slate-50 focus:z-20 focus:outline-offset-0 dark:text-slate-200 dark:ring-slate-600 dark:hover:bg-slate-800">@i</a>
                            }
                        }

                        <a href="@Url.Action("Backups", new { page = Model.CurrentPage + 1 })" class="@(Model.HasNextPage ? "" : "pointer-events-none text-slate-300 dark:text-slate-600") relative inline-flex items-center rounded-r-md px-2 py-2 text-slate-400 ring-1 ring-inset ring-slate-300 hover:bg-slate-50 focus:z-20 focus:outline-offset-0 dark:ring-slate-600 dark:hover:bg-slate-800">
                            <span class="sr-only">Siguiente</span>
                            <span class="material-symbols-outlined text-sm">chevron_right</span>
                        </a>
                    </nav>
                </div>
            </div>
        }
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}