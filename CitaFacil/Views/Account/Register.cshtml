@model CitaFacil.ViewModels.Account.RegisterViewModel

@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Crear cuenta";
    // ESTA LÍNEA ES LA CLAVE PARA QUE SE VEA ANCHO:
    ViewData["UseWideLayout"] = true;
}

<div class="grid w-full grid-cols-1 gap-0 overflow-hidden rounded-3xl border border-slate-200 bg-white shadow-2xl lg:grid-cols-[1fr_1.2fr]">

    <aside class="relative flex flex-col justify-between bg-gradient-to-br from-sky-100 to-white p-10 lg:p-12">
        <div class="space-y-8">
            <a asp-controller="Home" asp-action="Index" class="inline-flex items-center gap-3">
                <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-white text-primary shadow-sm">
                    <span class="material-symbols-outlined text-3xl">health_and_safety</span>
                </div>
                <span class="text-2xl font-black tracking-tight text-slate-800">CitaFácil</span>
            </a>

            <div class="space-y-4">
                <h1 class="text-4xl font-black leading-tight text-slate-900 lg:text-5xl">
                    Tu salud,<br />
                    <span class="text-primary">simplificada.</span>
                </h1>
                <p class="text-lg text-slate-600">
                    Crea tu expediente digital y gestiona tus citas médicas de manera rápida y segura.
                </p>
            </div>

            <div class="space-y-4 pt-4">
                <div class="flex items-center gap-4 rounded-2xl bg-white/60 p-4 backdrop-blur-sm">
                    <div class="rounded-full bg-blue-100 p-2 text-primary">
                        <span class="material-symbols-outlined text-xl">calendar_month</span>
                    </div>
                    <div>
                        <p class="font-bold text-slate-800">Agenda 24/7</p>
                        <p class="text-xs text-slate-500">Sin llamadas, todo en línea.</p>
                    </div>
                </div>
                <div class="flex items-center gap-4 rounded-2xl bg-white/60 p-4 backdrop-blur-sm">
                    <div class="rounded-full bg-blue-100 p-2 text-primary">
                        <span class="material-symbols-outlined text-xl">notifications_active</span>
                    </div>
                    <div>
                        <p class="font-bold text-slate-800">Recordatorios</p>
                        <p class="text-xs text-slate-500">Nunca olvides una consulta.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-10 text-sm text-slate-500">
            &copy; @DateTime.Now.Year CitaFácil. Todos los derechos reservados.
        </div>
    </aside>

    <main class="flex flex-col justify-center p-8 lg:p-14 bg-white">
        <div class="mx-auto w-full max-w-lg space-y-8">
            <div class="text-center lg:text-left">
                <h2 class="text-2xl font-bold text-slate-900">Registro de Paciente</h2>
                <p class="mt-1 text-slate-500">
                    ¿Ya tienes cuenta?
                    <a asp-action="Login" class="font-medium text-primary hover:text-primary-dark hover:underline">Inicia sesión</a>
                </p>
            </div>

            <form asp-action="Register" method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="rounded-xl border border-red-100 bg-red-50 p-4 text-sm text-red-600"></div>

                <div class="space-y-5">
                    <h3 class="flex items-center text-xs font-bold uppercase tracking-wider text-slate-400">
                        <span class="mr-2 h-px w-4 bg-slate-300"></span> Información Personal
                    </h3>
                    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2">
                        <div class="space-y-1">
                            <label asp-for="nombre" class="text-sm font-medium text-slate-700">Nombre(s) *</label>
                            <input asp-for="nombre" class="form-input h-11 w-full rounded-xl border-slate-200 bg-slate-50 focus:border-primary focus:bg-white focus:ring-primary" placeholder="Ej. Ana" />
                            <span asp-validation-for="nombre" class="text-xs text-red-500"></span>
                        </div>
                        <div class="space-y-1">
                            <label asp-for="apellido" class="text-sm font-medium text-slate-700">Apellido Paterno *</label>
                            <input asp-for="apellido" class="form-input h-11 w-full rounded-xl border-slate-200 bg-slate-50 focus:border-primary focus:bg-white focus:ring-primary" placeholder="Ej. Pérez" />
                            <span asp-validation-for="apellido" class="text-xs text-red-500"></span>
                        </div>
                        <div class="space-y-1">
                            <label asp-for="segundo_apellido" class="text-sm font-medium text-slate-700">Apellido Materno</label>
                            <input asp-for="segundo_apellido" class="form-input h-11 w-full rounded-xl border-slate-200 bg-slate-50 focus:border-primary focus:bg-white focus:ring-primary" />
                        </div>
                        <div class="space-y-1">
                            <label asp-for="fecha_nacimiento" class="text-sm font-medium text-slate-700">Fecha Nacimiento *</label>
                            <input asp-for="fecha_nacimiento" type="date" class="form-input h-11 w-full rounded-xl border-slate-200 bg-slate-50 focus:border-primary focus:bg-white focus:ring-primary" />
                            <span asp-validation-for="fecha_nacimiento" class="text-xs text-red-500"></span>
                        </div>
                        <div class="space-y-1 sm:col-span-2">
                            <label asp-for="genero" class="text-sm font-medium text-slate-700">Género</label>
                            <select asp-for="genero" class="form-select h-11 w-full rounded-xl border-slate-200 bg-slate-50 focus:border-primary focus:bg-white focus:ring-primary">
                                <option value="">Seleccione...</option>
                                <option value="Femenino">Femenino</option>
                                <option value="Masculino">Masculino</option>
                                <option value="Otro">Otro</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="space-y-5 pt-2">
                    <h3 class="flex items-center text-xs font-bold uppercase tracking-wider text-slate-400">
                        <span class="mr-2 h-px w-4 bg-slate-300"></span> Datos de Acceso
                    </h3>
                    <div class="grid grid-cols-1 gap-5">
                        <div class="space-y-1">
                            <label asp-for="correo" class="text-sm font-medium text-slate-700">Correo Electrónico *</label>
                            <input asp-for="correo" type="email" class="form-input h-11 w-full rounded-xl border-slate-200 bg-slate-50 focus:border-primary focus:bg-white focus:ring-primary" placeholder="nombre@correo.com" />
                            <span asp-validation-for="correo" class="text-xs text-red-500"></span>
                        </div>
                        <div class="grid grid-cols-1 gap-5 sm:grid-cols-2">
                            <div class="space-y-1">
                                <label asp-for="usuario" class="text-sm font-medium text-slate-700">Usuario *</label>
                                <input asp-for="usuario" class="form-input h-11 w-full rounded-xl border-slate-200 bg-slate-50 focus:border-primary focus:bg-white focus:ring-primary" />
                                <span asp-validation-for="usuario" class="text-xs text-red-500"></span>
                            </div>
                            <div class="space-y-1">
                                <label asp-for="celular" class="text-sm font-medium text-slate-700">Celular</label>
                                <input asp-for="celular" class="form-input h-11 w-full rounded-xl border-slate-200 bg-slate-50 focus:border-primary focus:bg-white focus:ring-primary" />
                            </div>
                        </div>
                        <div class="grid grid-cols-1 gap-5 sm:grid-cols-2">
                            <div class="space-y-1">
                                <label asp-for="contraseña" class="text-sm font-medium text-slate-700">Contraseña *</label>
                                <input asp-for="contraseña" type="password" class="form-input h-11 w-full rounded-xl border-slate-200 bg-slate-50 focus:border-primary focus:bg-white focus:ring-primary" />
                                <span asp-validation-for="contraseña" class="text-xs text-red-500"></span>
                            </div>
                            <div class="space-y-1">
                                <label asp-for="confirmar_contraseña" class="text-sm font-medium text-slate-700">Confirmar *</label>
                                <input asp-for="confirmar_contraseña" type="password" class="form-input h-11 w-full rounded-xl border-slate-200 bg-slate-50 focus:border-primary focus:bg-white focus:ring-primary" />
                                <span asp-validation-for="confirmar_contraseña" class="text-xs text-red-500"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="pt-6">
                    <button type="submit" class="flex h-12 w-full items-center justify-center rounded-xl bg-primary font-bold text-white shadow-lg shadow-primary/20 transition hover:bg-primary-dark hover:shadow-primary/40 active:scale-[0.98]">
                        Registrarme
                    </button>
                </div>
            </form>
        </div>
    </main>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}