@model CitaFacil.ViewModels.Account.RegisterViewModel

@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Crear cuenta";
}

<div class="mx-auto flex min-h-screen w-full max-w-6xl flex-col justify-center px-6 py-10 lg:px-0 register-shell">
    <div class="grid w-full grid-cols-1 gap-8 rounded-3xl border border-zinc-200 bg-white p-8 shadow-xl lg:grid-cols-[1.05fr_1fr] lg:p-12 register-card">
        <aside class="flex flex-col justify-between gap-10 rounded-2xl bg-gradient-to-br from-primary/10 via-white to-white p-8 register-card-aside">
            <div class="space-y-6">
                <a asp-controller="Home" asp-action="Index" class="inline-flex items-center gap-3 text-primary hover:text-primary-dark">
                    <img src="~/logo_cita.png" alt="CitaFácil" class="h-12 w-12 rounded-xl bg-white p-2 shadow-md" />
                    <span class="text-2xl font-black tracking-tight">CitaFácil</span>
                </a>
                <div class="space-y-4">
                    <h1 class="text-4xl font-black leading-tight tracking-tight text-zinc-900">Crea tu cuenta en minutos</h1>
                    <p class="text-base text-zinc-600">
                        Organiza tus citas, consulta historiales y recibe notificaciones internas personalizadas. Empieza hoy mismo.
                    </p>
                </div>
                <dl class="grid grid-cols-1 gap-4 text-sm text-zinc-600 lg:grid-cols-2">
                    <div class="rounded-xl bg-white/70 p-4 shadow-sm backdrop-blur">
                        <dt class="text-xs font-semibold uppercase tracking-wide text-primary">Sencillo</dt>
                        <dd class="mt-2 leading-relaxed">Un registro en dos secciones para que no pierdas tiempo.</dd>
</div>
                    <div class="rounded-xl bg-white/70 p-4 shadow-sm backdrop-blur">
                        <dt class="text-xs font-semibold uppercase tracking-wide text-primary">Confiable</dt>
                        <dd class="mt-2 leading-relaxed">Tu información se mantiene protegida en todo momento.</dd>
    </div>
                </dl>
</div>

            <p class="text-sm text-zinc-500">
                ¿Ya tienes cuenta?
                <a asp-action="Login" class="font-semibold text-primary hover:underline">Inicia sesión aquí</a>
            </p>
        </aside>

        <section class="flex flex-col justify-center rounded-2xl bg-white p-6 shadow-sm ring-1 ring-primary/10 register-card-form">
            <header class="mb-6 space-y-2 text-center">
                <p class="text-sm font-semibold uppercase tracking-wide text-primary">Registro de paciente</p>
                <h2 class="text-2xl font-bold text-zinc-900">Cuéntanos sobre ti</h2>
                <p class="text-sm text-zinc-500">Usaremos esta información para preparar tu expediente y personalizar tu experiencia.</p>
            </header>

            <form asp-controller="Account" asp-action="Register" method="post" class="space-y-6">
    @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-600"></div>

                <div class="rounded-2xl border border-zinc-200 p-5">
                    <h3 class="text-sm font-semibold uppercase tracking-wide text-zinc-500">Datos personales</h3>
                    <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2">
        <label asp-for="nombre" class="flex flex-col gap-2">
                            <span class="text-sm font-medium text-zinc-700">Nombre(s) *</span>
                            <input asp-for="nombre" autocomplete="given-name" class="form-input h-11 rounded-xl border-zinc-200 bg-zinc-50 focus:border-primary focus:ring-primary" placeholder="María Fernanda" />
                            <span asp-validation-for="nombre" class="text-xs text-red-500"></span>
        </label>
        <label asp-for="apellido" class="flex flex-col gap-2">
                            <span class="text-sm font-medium text-zinc-700">Apellido paterno *</span>
                            <input asp-for="apellido" autocomplete="family-name" class="form-input h-11 rounded-xl border-zinc-200 bg-zinc-50 focus:border-primary focus:ring-primary" placeholder="García" />
                            <span asp-validation-for="apellido" class="text-xs text-red-500"></span>
        </label>
                        <label asp-for="segundo_apellido" class="flex flex-col gap-2 sm:col-span-2 lg:col-span-1">
                            <span class="text-sm font-medium text-zinc-700">Segundo apellido (opcional)</span>
                            <input asp-for="segundo_apellido" class="form-input h-11 rounded-xl border-zinc-200 bg-zinc-50 focus:border-primary focus:ring-primary" placeholder="Luna" />
                            <span asp-validation-for="segundo_apellido" class="text-xs text-red-500"></span>
        </label>
        <label asp-for="fecha_nacimiento" class="flex flex-col gap-2">
                            <span class="text-sm font-medium text-zinc-700">Fecha de nacimiento *</span>
                            <input asp-for="fecha_nacimiento" type="date" class="form-input h-11 rounded-xl border-zinc-200 bg-zinc-50 focus:border-primary focus:ring-primary" />
                            <span asp-validation-for="fecha_nacimiento" class="text-xs text-red-500"></span>
        </label>
        <label asp-for="genero" class="flex flex-col gap-2">
                            <span class="text-sm font-medium text-zinc-700">Género (opcional)</span>
                            <select asp-for="genero" class="form-select h-11 rounded-xl border-zinc-200 bg-zinc-50 focus:border-primary focus:ring-primary">
                <option value="">Seleccionar</option>
                <option value="Femenino">Femenino</option>
                <option value="Masculino">Masculino</option>
                <option value="Otro">Otro</option>
            </select>
                            <span asp-validation-for="genero" class="text-xs text-red-500"></span>
                        </label>
                        <label asp-for="celular" class="flex flex-col gap-2">
                            <span class="text-sm font-medium text-zinc-700">Teléfono móvil (opcional)</span>
                            <input asp-for="celular" autocomplete="tel" class="form-input h-11 rounded-xl border-zinc-200 bg-zinc-50 focus:border-primary focus:ring-primary" placeholder="644 123 4567" />
                            <span asp-validation-for="celular" class="text-xs text-red-500"></span>
                        </label>
                        <label asp-for="direccion" class="sm:col-span-2 flex flex-col gap-2">
                            <span class="text-sm font-medium text-zinc-700">Dirección (opcional)</span>
                            <textarea asp-for="direccion" rows="2" class="form-textarea rounded-xl border-zinc-200 bg-zinc-50 focus:border-primary focus:ring-primary" placeholder="Calle, número, colonia, ciudad"></textarea>
                            <span asp-validation-for="direccion" class="text-xs text-red-500"></span>
        </label>
                    </div>
    </div>

                <div class="rounded-2xl border border-zinc-200 p-5">
                    <h3 class="text-sm font-semibold uppercase tracking-wide text-zinc-500">Acceso a la plataforma</h3>
                    <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2">
                        <label asp-for="usuario" class="flex flex-col gap-2">
                            <span class="text-sm font-medium text-zinc-700">Nombre de usuario *</span>
                            <input asp-for="usuario" autocomplete="username" class="form-input h-11 rounded-xl border-zinc-200 bg-zinc-50 focus:border-primary focus:ring-primary" placeholder="usuario123" />
                            <span asp-validation-for="usuario" class="text-xs text-red-500"></span>
                        </label>
                        <label asp-for="correo" class="flex flex-col gap-2">
                            <span class="text-sm font-medium text-zinc-700">Correo electrónico *</span>
                            <input asp-for="correo" autocomplete="email" class="form-input h-11 rounded-xl border-zinc-200 bg-zinc-50 focus:border-primary focus:ring-primary" placeholder="correo@ejemplo.com" />
                            <span asp-validation-for="correo" class="text-xs text-red-500"></span>
                        </label>
                        <label asp-for="contraseña" class="flex flex-col gap-2">
                            <span class="text-sm font-medium text-zinc-700">Contraseña *</span>
                            <input asp-for="contraseña" type="password" autocomplete="new-password" class="form-input h-11 rounded-xl border-zinc-200 bg-zinc-50 focus:border-primary focus:ring-primary" placeholder="••••••••" />
                            <span asp-validation-for="contraseña" class="text-xs text-red-500"></span>
                        </label>
                        <label asp-for="confirmar_contraseña" class="flex flex-col gap-2">
                            <span class="text-sm font-medium text-zinc-700">Confirmar contraseña *</span>
                            <input asp-for="confirmar_contraseña" type="password" autocomplete="new-password" class="form-input h-11 rounded-xl border-zinc-200 bg-zinc-50 focus:border-primary focus:ring-primary" placeholder="••••••••" />
                            <span asp-validation-for="confirmar_contraseña" class="text-xs text-red-500"></span>
    </label>
                    </div>
                </div>

                <button type="submit" class="inline-flex w-full items-center justify-center gap-2 rounded-2xl bg-primary px-6 py-3 text-base font-semibold text-white shadow-lg transition hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2">
                    <span class="material-symbols-outlined text-lg">how_to_reg</span>
                    Crear cuenta
        </button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

