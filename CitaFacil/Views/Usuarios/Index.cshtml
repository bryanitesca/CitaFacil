@using System.Linq
@model IEnumerable<CitaFacil.Models.Usuario>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Gestión de usuarios";
    var searchTerm = ViewBag.SearchTerm as string ?? string.Empty;
    var hasSearch = !string.IsNullOrWhiteSpace(searchTerm);

    string ObtenerClaseRol(string rol) => rol switch
    {
        "Administrador" => "bg-purple-100 text-purple-800",
        "Doctor" => "bg-blue-100 text-blue-800",
        _ => "bg-zinc-100 text-zinc-800"
    };

    string ObtenerClaseEstado(bool activo) => activo ? "bg-green-100 text-green-700" : "bg-red-100 text-red-700";
}

<div class="space-y-8">
    <div class="flex flex-wrap justify-between items-start gap-4">
        <div class="space-y-2">
            <h1 class="text-4xl font-black tracking-tight text-text-light dark:text-text-dark">Gestión de usuarios</h1>
            <p class="text-zinc-500 dark:text-zinc-400">Administra las cuentas, roles y estados de acceso del sistema.</p>
        </div>
        <a asp-action="Create" class="flex items-center gap-2 px-5 py-3 rounded-lg bg-primary text-white font-semibold hover:bg-primary-dark transition-colors duration-200">
            <span class="material-symbols-outlined">add</span>
            Crear usuario
        </a>
    </div>

    <div class="bg-white dark:bg-zinc-800 rounded-xl border border-zinc-200 dark:border-zinc-700">
        <div class="flex flex-col gap-4 items-start lg:flex-row lg:items-center justify-between p-6 border-b border-zinc-100 dark:border-zinc-700">
            <form asp-action="Index" method="get" class="w-full lg:w-1/2 flex flex-col gap-3 lg:flex-row lg:items-center">
                <div class="relative flex-1">
                    <span class="material-symbols-outlined absolute left-4 top-1/2 -translate-y-1/2 text-zinc-400">search</span>
                    <input type="text" name="search" value="@searchTerm" placeholder="Buscar por nombre" class="w-full pl-12 pr-4 py-3 rounded-lg border border-zinc-300 dark:border-zinc-600 bg-white dark:bg-zinc-800 focus:ring-primary focus:border-primary text-sm" />
                </div>
                <div class="flex items-center gap-3">
                    <button type="submit" class="px-4 py-2 rounded-lg bg-primary text-white text-sm font-semibold hover:bg-primary-dark transition-colors duration-200">Buscar</button>
                    @if (hasSearch)
                    {
                        <a asp-action="Index" class="px-4 py-2 rounded-lg border border-zinc-300 dark:border-zinc-600 text-sm text-zinc-600 dark:text-zinc-200 hover:border-primary">Limpiar</a>
                    }
                </div>
            </form>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-zinc-100 dark:divide-zinc-700 text-sm">
                <thead class="bg-zinc-50 dark:bg-zinc-700 text-zinc-600 dark:text-zinc-200 uppercase">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left font-semibold">Nombre</th>
                        <th scope="col" class="px-6 py-3 text-left font-semibold">Correo</th>
                        <th scope="col" class="px-6 py-3 text-left font-semibold">Rol</th>
                        <th scope="col" class="px-6 py-3 text-left font-semibold">Registrado</th>
                        <th scope="col" class="px-6 py-3 text-left font-semibold">Estado</th>
                        <th scope="col" class="px-6 py-3 text-right font-semibold">Acciones</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-zinc-100 dark:divide-zinc-700">
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="px-6 py-8 text-center text-zinc-500 dark:text-zinc-300">Aún no hay usuarios registrados.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var usuario in Model.OrderByDescending(u => u.creado_el))
                        {
                            var nombreCompleto = string.Join(" ", new[] { usuario.nombre, usuario.apellido }.Where(s => !string.IsNullOrWhiteSpace(s))).Trim();
                            <tr class="hover:bg-zinc-50 dark:hover:bg-zinc-800/60 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="flex flex-col">
                                        <span class="font-semibold text-text-light dark:text-text-dark">@(string.IsNullOrWhiteSpace(nombreCompleto) ? usuario.usuario : nombreCompleto)</span>
                                        <span class="text-xs text-zinc-500">Usuario: @usuario.usuario</span>
                                    </div>
                                </td>
                                <td class="px-6 py-4 text-zinc-600 dark:text-zinc-300">@usuario.correo</td>
                                <td class="px-6 py-4">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold @ObtenerClaseRol(usuario.rol)">@usuario.rol</span>
                                </td>
                                <td class="px-6 py-4 text-zinc-600 dark:text-zinc-300">@usuario.creado_el.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="px-6 py-4">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold @ObtenerClaseEstado(usuario.activo)">@((usuario.activo ? "Activo" : "Inactivo"))</span>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <div class="inline-flex items-center gap-3 text-sm font-medium">
                                        <a asp-action="Details" asp-route-id="@usuario.id" class="text-zinc-500 hover:text-primary">Detalles</a>
                                        <span class="text-zinc-300">|</span>
                                        <a asp-action="Edit" asp-route-id="@usuario.id" class="text-primary hover:underline">Editar</a>
                                        <span class="text-zinc-300">|</span>
                                        <a asp-action="Delete" asp-route-id="@usuario.id" class="hover:underline @(usuario.activo ? "text-accent-error" : "text-green-600")">
                                            @(usuario.activo ? "Desactivar" : "Reactivar")
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="flex justify-between items-center px-6 py-4 border-t border-zinc-100 dark:border-zinc-700 text-sm text-zinc-500 dark:text-zinc-300">
            <span>Mostrando @Model.Count() usuario(s)</span>
            <div class="flex items-center gap-2">
                <button class="px-3 py-1 rounded-lg border border-zinc-300 dark:border-zinc-600 bg-white dark:bg-zinc-800 hover:border-primary">Anterior</button>
                <button class="px-3 py-1 rounded-lg border border-primary bg-primary text-white">1</button>
                <button class="px-3 py-1 rounded-lg border border-zinc-300 dark:border-zinc-600 bg-white dark:bg-zinc-800 hover:border-primary">Siguiente</button>
            </div>
        </div>
    </div>
</div>

