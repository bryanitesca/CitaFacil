@model CitaFacil.Models.Usuario
@{
    Layout = "_AdminLayout";
    var esActivo = Model.activo;
    ViewData["Title"] = esActivo ? "Desactivar usuario" : "Reactivar usuario";
    var accionBotonClase = esActivo
        ? "bg-accent-error text-white hover:bg-red-700"
        : "bg-green-600 text-white hover:bg-green-700";
    var accionIcono = esActivo ? "person_off" : "person";
    var accionTexto = esActivo ? "Sí, desactivar usuario" : "Sí, reactivar usuario";
}

<!-- Título de la Página -->
<div class="mb-8">
    <h1 class="text-4xl font-black tracking-tighter @(esActivo ? "text-accent-error" : "text-green-600")">
        @(esActivo ? "Desactivar usuario" : "Reactivar usuario")
    </h1>
    <p class="text-lg text-zinc-500 dark:text-zinc-400">
        @(esActivo
            ? $"¿Estás seguro de que quieres desactivar a {Model.usuario}?"
            : $"¿Quieres reactivar a {Model.usuario} y devolverle el acceso?")
    </p>
    <p class="text-lg font-semibold mt-2 @(esActivo ? "text-accent-error" : "text-green-600")">
        @(esActivo ? "Podrás reactivarlo más tarde desde este mismo panel." : "El usuario volverá a estar disponible en toda la plataforma.")
    </p>
</div>

<!-- Formulario de Eliminación -->
<div class="bg-white dark:bg-zinc-800 rounded-lg shadow-md overflow-hidden">

    <!-- Detalles del Usuario a Eliminar -->
    <div class="p-6 lg:p-8">
        <h3 class="text-lg font-semibold text-text-light dark:text-text-dark border-b dark:border-zinc-700 pb-2 mb-6">Usuario a Eliminar</h3>
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4">
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-zinc-500 dark:text-zinc-400">Usuario</dt>
                <dd class="mt-1 text-base text-text-light dark:text-text-dark">@Model.usuario</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-zinc-500 dark:text-zinc-400">Rol</dt>
                <dd class="mt-1 text-base text-text-light dark:text-text-dark">@Model.rol</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-zinc-500 dark:text-zinc-400">Correo</dt>
                <dd class="mt-1 text-base text-text-light dark:text-text-dark">@Model.correo</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-zinc-500 dark:text-zinc-400">Celular</dt>
                <dd class="mt-1 text-base text-text-light dark:text-text-dark">@Model.celular</dd>
            </div>
        </dl>
    </div>

    <!-- Botones de Acción -->
    <form asp-action="Delete">
        <!-- ID Oculto -->
        <input type="hidden" asp-for="id" />
        
        <div class="flex items-center justify-end gap-4 p-6 border-t dark:border-zinc-700">
        <div class="flex items-center justify-end gap-4 p-6 border-t dark:border-zinc-700">
            <button type="submit" class="flex items-center justify-center gap-2 px-5 py-2 rounded-lg font-semibold transition-colors duration-200 @accionBotonClase">
                <span class="material-symbols-outlined">@accionIcono</span>
                @accionTexto
            </button>
                Cancelar
            </a>
        </div>
    </form>
</div>

<!-- Link para volver a la lista -->
<div class="mt-6">
    <a asp-action="Index" class="flex items-center gap-2 text-primary hover:underline">
        <span class="material-symbols-outlined">arrow_back</span>
        Volver a la lista
    </a>
</div>
