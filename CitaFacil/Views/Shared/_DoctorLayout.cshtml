<!DOCTYPE html>
<html class="light" lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CitaFacil</title>
    
    <!-- TailwindCSS CDN -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet"/>
    
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#135bec",
                        "background-light": "#f6f6f8",
                        "background-dark": "#101622",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
            font-size: 24px;
        }
        .material-symbols-outlined.fill {
           font-variation-settings: 'FILL' 1, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/tailwind-custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-background-light dark:bg-background-dark font-display text-[#111827] dark:text-white/90">
    <div class="flex h-screen w-full">
        <!-- SideNavBar -->
        <aside id="sidebar" class="relative flex flex-col border-r border-gray-200 bg-white dark:border-gray-800 dark:bg-background-dark transition-all duration-300 ease-in-out sidebar-expanded">
            <!-- Toggle Button -->
            <button id="sidebar-toggle" class="absolute -right-3 top-4 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-full w-6 h-6 flex items-center justify-center text-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 z-50">
                <span class="material-symbols-outlined text-sm">chevron_left</span>
            </button>
            <div class="flex h-full flex-col justify-between p-4 overflow-hidden">
                <div class="flex flex-col gap-4">
                    <!-- Logo y Nombre -->
                    <div class="sidebar-logo-container flex items-center gap-3 px-3 py-2 border-b border-gray-200 pb-4">
                        <img src="~/logo_cita.png" alt="CitaFacil Logo" class="sidebar-logo-image w-10 h-10 min-w-[2.5rem] object-contain flex-shrink-0" />
                        <span class="text-xl font-bold text-primary sidebar-text whitespace-nowrap">CitaFacil</span>
                    </div>
                    
                    <!-- Información del Usuario -->
                    <div class="sidebar-user-container flex items-center gap-3 px-3 py-2">
                        @{
                            var currentUser = ViewBag.CurrentDoctor as CitaFacil.Models.Doctor;
                            var userPhotoUrl = currentUser?.FotoUrlOPlaceholder ?? "https://ui-avatars.com/api/?name=Dr&background=135bec&color=fff&size=200";
                        }
                        <div class="sidebar-user-photo bg-center bg-no-repeat aspect-square bg-cover rounded-full size-10 min-w-[2.5rem] flex-shrink-0" style='background-image: url("@userPhotoUrl");'></div>
                        <div class="flex flex-col sidebar-text overflow-hidden min-w-0">
                            <h1 class="text-[#111318] text-base font-medium leading-normal truncate">@(currentUser?.NombreCompleto ?? $"Dr. {User.Identity?.Name}")</h1>
                            <p class="text-[#616f89] text-sm font-normal leading-normal truncate">@(currentUser?.Especialidad?.nombre ?? "Medicina General")</p>
                        </div>
                    </div>
                    <nav class="flex flex-col gap-2">
                        <a class="flex items-center gap-3 rounded-lg px-3 py-2 transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "bg-primary/10 text-primary dark:bg-primary/20" : "text-[#616f89] dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-white/10")" href="@Url.Action("Index", "Doctor")">
                            <span class="material-symbols-outlined flex-shrink-0 @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "fill" : "")">dashboard</span>
                            <p class="text-sm font-medium leading-normal sidebar-text whitespace-nowrap">Dashboard</p>
                        </a>
                        <a class="flex items-center gap-3 rounded-lg px-3 py-2 transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "Calendario" ? "bg-primary/10 text-primary dark:bg-primary/20" : "text-[#616f89] dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-white/10")" href="@Url.Action("Calendario", "Doctor")">
                            <span class="material-symbols-outlined flex-shrink-0 @(ViewContext.RouteData.Values["action"]?.ToString() == "Calendario" ? "fill" : "")">calendar_month</span>
                            <p class="text-sm font-medium leading-normal sidebar-text whitespace-nowrap">Calendario</p>
                        </a>
                        <a class="flex items-center gap-3 rounded-lg px-3 py-2 transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "Pacientes" || ViewContext.RouteData.Values["action"]?.ToString() == "Expediente" || ViewContext.RouteData.Values["action"]?.ToString() == "Contacto" ? "bg-primary/10 text-primary dark:bg-primary/20" : "text-[#616f89] dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-white/10")" href="@Url.Action("Pacientes", "Doctor")">
                            <span class="material-symbols-outlined flex-shrink-0 @(ViewContext.RouteData.Values["action"]?.ToString() == "Pacientes" || ViewContext.RouteData.Values["action"]?.ToString() == "Expediente" || ViewContext.RouteData.Values["action"]?.ToString() == "Contacto" ? "fill" : "")">groups</span>
                            <p class="text-sm font-medium leading-normal sidebar-text whitespace-nowrap">Pacientes</p>
                        </a>
                        <a class="flex items-center gap-3 rounded-lg px-3 py-2 transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "Informes" ? "bg-primary/10 text-primary dark:bg-primary/20" : "text-[#616f89] dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-white/10")" href="@Url.Action("Informes", "Doctor")">
                            <span class="material-symbols-outlined flex-shrink-0 @(ViewContext.RouteData.Values["action"]?.ToString() == "Informes" ? "fill" : "")">bar_chart</span>
                            <p class="text-sm font-medium leading-normal sidebar-text whitespace-nowrap">Informes</p>
                        </a>
                    </nav>
                </div>
                <div class="flex flex-col gap-2">
                    <div class="flex flex-col gap-1">
                        <a class="flex items-center gap-3 rounded-lg px-3 py-2 transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "Ajustes" ? "bg-primary/10 text-primary dark:bg-primary/20" : "text-[#616f89] dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-white/10")" href="@Url.Action("Ajustes", "Doctor")">
                            <span class="material-symbols-outlined flex-shrink-0 @(ViewContext.RouteData.Values["action"]?.ToString() == "Ajustes" ? "fill" : "")">settings</span>
                            <p class="text-sm font-medium leading-normal sidebar-text whitespace-nowrap">Ajustes</p>
                        </a>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="w-full">
                            <button type="submit" class="flex w-full items-center gap-3 rounded-lg px-3 py-2 text-[#616f89] dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-white/10 transition-colors">
                                <span class="material-symbols-outlined flex-shrink-0">logout</span>
                                <p class="text-sm font-medium leading-normal sidebar-text whitespace-nowrap">Cerrar Sesión</p>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </aside>
        
        <!-- Main Content -->
        <main id="main-content" class="flex-1 transition-all duration-300 ease-in-out main-content-expanded overflow-y-auto">
            <div class="p-6 pt-8">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Core JavaScript -->
    <script src="~/js/app-core.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Sidebar Toggle Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.getElementById('sidebar');
            const sidebarToggle = document.getElementById('sidebar-toggle');
            const mainContent = document.getElementById('main-content');
            const toggleIcon = sidebarToggle.querySelector('.material-symbols-outlined');
            
            // Recuperar estado del localStorage
            const isCollapsed = localStorage.getItem('sidebar-collapsed') === 'true';
            if (isCollapsed) {
                toggleSidebar();
            }
            
            sidebarToggle.addEventListener('click', function() {
                toggleSidebar();
            });
            
            function toggleSidebar() {
                const isCurrentlyExpanded = sidebar.classList.contains('sidebar-expanded');
                
                if (isCurrentlyExpanded) {
                    // Colapsar
                    sidebar.classList.remove('sidebar-expanded');
                    sidebar.classList.add('sidebar-collapsed');
                    mainContent.classList.remove('main-content-expanded');
                    mainContent.classList.add('main-content-collapsed');
                    toggleIcon.textContent = 'chevron_right';
                    localStorage.setItem('sidebar-collapsed', 'true');
                } else {
                    // Expandir
                    sidebar.classList.remove('sidebar-collapsed');
                    sidebar.classList.add('sidebar-expanded');
                    mainContent.classList.remove('main-content-collapsed');
                    mainContent.classList.add('main-content-expanded');
                    toggleIcon.textContent = 'chevron_left';
                    localStorage.setItem('sidebar-collapsed', 'false');
                }
            }
        });
    </script>
    
    <!-- Page-specific Scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
