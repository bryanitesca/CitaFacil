@model CitaFacil.Models.Cita

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Editar cita";
}

<div class="space-y-8">
    <div class="flex items-center justify-between gap-4">
        <div>
            <h1 class="text-3xl font-bold tracking-[-0.03em] text-slate-900 dark:text-slate-100">Editar cita</h1>
            <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">Actualiza la información de la cita seleccionada.</p>
        </div>
        <a asp-action="Index" class="inline-flex items-center gap-2 rounded-lg border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-600 transition hover:border-primary hover:text-primary dark:border-slate-700 dark:text-slate-300 dark:hover:border-primary dark:hover:text-primary">
            <span class="material-symbols-outlined text-sm">arrow_back</span>
            Regresar al listado
        </a>
    </div>

    <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-sm dark:border-slate-700 dark:bg-slate-900/60">
        <form asp-action="Edit" method="post" class="space-y-8">
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                <div asp-validation-summary="ModelOnly" class="rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700 dark:border-red-700 dark:bg-red-900/40 dark:text-red-300"></div>
            }
            <input type="hidden" asp-for="id" />

            <div class="grid gap-6 lg:grid-cols-2">
                <div class="space-y-2">
                    <label asp-for="fecha" class="flex items-center gap-2 text-sm font-medium text-slate-700 dark:text-slate-200">
                        <span class="material-symbols-outlined text-base text-primary">event</span>
                        Fecha de la cita
                    </label>
                    <input asp-for="fecha" type="date" class="w-full rounded-lg border-slate-200 bg-white px-4 py-2.5 text-sm text-slate-700 shadow-sm focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/30 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-200" />
                    <span asp-validation-for="fecha" class="text-sm text-red-600 dark:text-red-400"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="hora" class="flex items-center gap-2 text-sm font-medium text-slate-700 dark:text-slate-200">
                        <span class="material-symbols-outlined text-base text-primary">schedule</span>
                        Hora
                    </label>
                    <input asp-for="hora" type="time" class="w-full rounded-lg border-slate-200 bg-white px-4 py-2.5 text-sm text-slate-700 shadow-sm focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/30 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-200" />
                    <span asp-validation-for="hora" class="text-sm text-red-600 dark:text-red-400"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="paciente_id" class="flex items-center gap-2 text-sm font-medium text-slate-700 dark:text-slate-200">
                        <span class="material-symbols-outlined text-base text-primary">person</span>
                        Paciente
                    </label>
                    <select asp-for="paciente_id" asp-items="ViewBag.paciente_id" class="w-full rounded-lg border-slate-200 bg-white px-4 py-2.5 text-sm text-slate-700 shadow-sm focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/30 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-200">
                        <option value="">Selecciona un paciente</option>
                    </select>
                    <span asp-validation-for="paciente_id" class="text-sm text-red-600 dark:text-red-400"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="doctor_id" class="flex items-center gap-2 text-sm font-medium text-slate-700 dark:text-slate-200">
                        <span class="material-symbols-outlined text-base text-primary">stethoscope</span>
                        Doctor
                    </label>
                    <select asp-for="doctor_id" asp-items="ViewBag.doctor_id" class="w-full rounded-lg border-slate-200 bg-white px-4 py-2.5 text-sm text-slate-700 shadow-sm focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/30 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-200">
                        <option value="">Selecciona un doctor</option>
                    </select>
                    <span asp-validation-for="doctor_id" class="text-sm text-red-600 dark:text-red-400"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="motivo" class="flex items-center gap-2 text-sm font-medium text-slate-700 dark:text-slate-200">
                        <span class="material-symbols-outlined text-base text-primary">subject</span>
                        Motivo de la cita
                    </label>
                    <input asp-for="motivo" class="w-full rounded-lg border-slate-200 bg-white px-4 py-2.5 text-sm text-slate-700 shadow-sm focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/30 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-200" />
                    <span asp-validation-for="motivo" class="text-sm text-red-600 dark:text-red-400"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="estado" class="flex items-center gap-2 text-sm font-medium text-slate-700 dark:text-slate-200">
                        <span class="material-symbols-outlined text-base text-primary">verified</span>
                        Estado
                    </label>
                    <input asp-for="estado" class="w-full uppercase rounded-lg border-slate-200 bg-white px-4 py-2.5 text-sm text-slate-700 shadow-sm focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/30 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-200" />
                    <span asp-validation-for="estado" class="text-sm text-red-600 dark:text-red-400"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="duracion_minutos" class="flex items-center gap-2 text-sm font-medium text-slate-700 dark:text-slate-200">
                        <span class="material-symbols-outlined text-base text-primary">hourglass_bottom</span>
                        Duración (minutos)
                    </label>
                    <input asp-for="duracion_minutos" type="number" min="15" max="240" step="5" class="w-full rounded-lg border-slate-200 bg-white px-4 py-2.5 text-sm text-slate-700 shadow-sm focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/30 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-200" />
                    <span asp-validation-for="duracion_minutos" class="text-sm text-red-600 dark:text-red-400"></span>
                </div>
            </div>

            <div class="grid gap-6 lg:grid-cols-2">
                <div class="space-y-2">
                    <label asp-for="notas" class="flex items-center gap-2 text-sm font-medium text-slate-700 dark:text-slate-200">
                        <span class="material-symbols-outlined text-base text-primary">notes</span>
                        Notas internas
                    </label>
                    <textarea asp-for="notas" rows="4" class="w-full rounded-lg border-slate-200 bg-white px-4 py-3 text-sm text-slate-700 shadow-sm focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/30 dark:border-slate-700 dark:bg-slate-900 dark:text-slate-200"></textarea>
                    <span asp-validation-for="notas" class="text-sm text-red-600 dark:text-red-400"></span>
                </div>

                <div class="space-y-4 rounded-xl border border-slate-200 bg-slate-50 p-6 dark:border-slate-700 dark:bg-slate-900/40">
                    <h2 class="text-base font-semibold text-slate-800 dark:text-slate-100">Modalidad de la cita</h2>
                    <label class="flex items-start gap-3">
                        <input asp-for="es_virtual" class="mt-1 size-4 rounded border-slate-300 text-primary focus:ring-primary/40" />
                        <span class="text-sm text-slate-600 dark:text-slate-300">Marca si la cita se realiza virtualmente.</span>
                    </label>
                    <p class="text-xs text-slate-500 dark:text-slate-400">Si editas una cita presencial, confirma que el consultorio del doctor sea el correcto.</p>
                </div>
            </div>

            <div class="flex items-center justify-end gap-3">
                <a asp-action="Index" class="inline-flex items-center gap-2 rounded-lg border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-600 transition hover:border-primary hover:text-primary dark:border-slate-700 dark:text-slate-300 dark:hover:border-primary dark:hover:text-primary">
                    Cancelar
                </a>
                <button type="submit" class="inline-flex items-center gap-2 rounded-lg bg-primary px-5 py-2.5 text-sm font-semibold text-white shadow-sm transition hover:bg-primary-dark">
                    <span class="material-symbols-outlined text-sm">save</span>
                    Guardar cambios
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
